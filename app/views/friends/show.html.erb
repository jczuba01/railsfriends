<div>
  <h1>
    <%= @friend.first_name %>
    <%= @friend.last_name %>
  </h1>
  <p>
    <%= @friend.email %>  | 
    <%= @friend.phone %>  |  
    <%= @friend.twitter %>

  </p>
  <br/>


<div>
  <%= link_to "Edit this friend", edit_friend_path(@friend), class:"btn btn-secondary" %> |
  <%= link_to "Back to list", friends_path, class:"btn btn-secondary" %>
  <br/><br/>
  <%= button_to "Confirm deleting", @friend, method: :delete, class:"btn btn-danger" %>
</div>
